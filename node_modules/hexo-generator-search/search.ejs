<?xml version="1.0" encoding="utf-8"?>
<search>
  <% var url = config.url + config.root %>
  <% if(posts){ %>
    <% posts.each(function(post){ %>
    <entry>
      <title><%-: post.title %></title>
      <url><%- encodeURI('/'+post.path) %></url>
      <tag><%- getTags(post.tags,post.categories) %></tag>
      <description><%-: post.description %></description>
      <date><%-: getDate(post.date)  %></date>
    </entry>
    <% }) %>
  <% } %>
  <% if(pages){ %>
    <% pages.each(function(page){ %>
    <entry>
      <title><%-: page.title %></title>
      <url><%- encodeURI('/'+post.path) %></url>
      <tag><%- getTags(page.tags,page.categories) %></tag>
      <description><%-: page.description %></description>
      <date><%-: date(page.date, 'YYYY-MM-DD')  %></date>
    </entry>
    <% }) %>
  <% } %>
</search>
